<!DOCTYPE html>
<html lang="en">

    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Backend NodeJS All Users</title>
        <link rel="stylesheet" href="/stylesheets/style.css">
        <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
    </head>

    <body class="bg-zinc-900 min-h-screen text-white py-10 px-2 mt-5">
        <!-- Navigation Bar -->
        <nav class="w-full fixed top-0 left-0">
            <div
                class="flex items-center justify-end space-x-4 md:space-x-12 text-sm md:text-lg bg-zinc-800 md:px-6 px-3 py-2 shadow-lg">
                <a href="/users" class="text-white font-medium hover:text-indigo-400 transition">All Users</a>
                <a href="/" class="text-white font-medium hover:text-indigo-400 transition">Create User</a>
            </div>
        </nav>

        <!-- Main content -->
        <div class="max-w-4xl mx-auto">
            <h1 class="text-2xl md:text-3xl font-bold mb-6 text-center">User's List</h1>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-5 pb-4">
                <% users.forEach(user=> { %>
                    <div
                        class="flex items-center justify-between bg-zinc-800 hover:bg-zinc-900 transition-all border border-zinc-700 rounded-xl p-4  shadow-lg">
                        <a href="/user/<%= user.id %>" target="_parent" class="flex items-center gap-4 flex-1 ">
                            <img src="<%= user.imageUrl %>" alt="User Avatar" title="profile pic"
                                class="w-12 h-12 md:w-16 md:h-16 rounded-full border-2 border-indigo-500 object-cover" />
                            <div>
                                <h2 class="text-lg font-semibold" title="User name">
                                    <%= user.name %>
                                </h2>
                                <p class="text-zinc-300 text-xs md:text-sm" title="User email">
                                    <%= user.email %>
                                </p>
                            </div>
                        </a>
                        <!-- Edit and Delete Icons -->
                        <!-- EDIT Button -->
                        <div class="flex items-center  gap-3">
                            <a href="/user/update/<%=user.id %>" class="text-zinc-400 hover:text-indigo-400 transition"
                                title="Edit User">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24"
                                    stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                        d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                                </svg>
                            </a>
                            <!-- DELETE Button -->
                            <form action="/user/delete/<%= user.id %>?_method=DELETE" method="POST" class="inline-flex">
                                <button type="submit" class="text-zinc-400 cursor-pointer hover:text-red-400 transition"
                                    title="Delete User"
                                    onclick="return confirm('Are you sure you want to delete this user?')">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" fill="none"
                                        viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                                        <path stroke-linecap="round" stroke-linejoin="round"
                                            d="M6 7h12M10 11v6M14 11v6M5 7l1 12a2 2 0 002 2h8a2 2 0 002-2l1-12M9 7V4a1 1 0 011-1h4a1 1 0 011 1v3" />
                                    </svg>
                                </button>
                            </form>
                        </div>
                    </div>
                    <% }) %>
            </div>

            <% if (users.length===0) { %>
                <p class="text-center mt-10 text-zinc-400">No users found.</p>
                <% } %>
        </div>

        <script src="/javascripts/userActions.js"></script>
    </body>

</html>