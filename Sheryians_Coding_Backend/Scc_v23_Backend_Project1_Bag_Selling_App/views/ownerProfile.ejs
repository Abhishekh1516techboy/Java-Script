<!DOCTYPE html>
<html lang="en">

    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Owner Dashboard</title>
        <link href="/stylesheets/output.css" rel="stylesheet">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
        <style>
            /* Yo-yo bounce animation for flash messages */
            @keyframes yoyo-bounce {
                0% {
                    transform: scale(0);
                }

                50% {
                    transform: scale(1.1);
                }

                75% {
                    transform: scale(0.95);
                }

                100% {
                    transform: scale(1);
                }
            }

            .yoyo-bounce {
                animation: yoyo-bounce 0.5s ease-in-out forwards;
            }

            /* Models css */
            .modal-overlay {
                background-color: rgba(0, 0, 0, 0.5);
                backdrop-filter: blur(4px);
            }

            .modal-content {
                animation: modalSlideIn 0.3s ease-out;
                max-height: 95vh;
                overflow-y: auto;
            }

            @keyframes modalSlideIn {
                from {
                    transform: translateY(-20px);
                    opacity: 0;
                }

                to {
                    transform: translateY(0);
                    opacity: 1;
                }
            }

            .file-upload input[type='file'] {
                display: none;
            }
        </style>
    </head>

    <body class="bg-gray-50 font-sans">
        <%- include('partials/header') %>

            <!-- Flash message -->
            <%- include('partials/flashMessage') %>

                <div class="container mx-auto px-4 py-4">
                    <!-- Main Profile Card -->
                    <div class="bg-white rounded-xl shadow-md overflow-hidden">

                        <!-- Profile Header -->
                        <div class="bg-gradient-to-r from-blue-600 to-indigo-700 p-6 text-white">
                            <div class="flex flex-col md:flex-row items-center">
                                <div class="relative mb-4 md:mb-0 md:mr-6 bg-yellow-300 rounded-full">
                                    <img src="<%= user.picture ? `data:${user.picture.productImageType};base64,${user.picture.toString('base64')}` : '/images/default-user.png' %>"
                                        alt="Profile picture of <%= user?.name %>"
                                        class="w-24 h-24 rounded-full object-cover object-top border-3 border-white">
                                    <span
                                        class="absolute bottom-0 right-0 bg-green-500 rounded-full w-6 h-6 border-2 border-white"></span>
                                </div>
                                <div class="text-center md:text-left">
                                    <h1 class="text-2xl font-bold">
                                        <%= user?.name %>
                                    </h1>
                                    <p class="text-blue-100"><i class="fas fa-envelope mr-2"></i>
                                        <%= user?.email %>
                                    </p>
                                </div>
                            </div>
                        </div>

                        <!-- Main Content -->
                        <div class="grid grid-cols-1 lg:grid-cols-3 gap-6 p-6">
                            <!-- Left Column - Personal Info -->
                            <div class="lg:col-span-1 space-y-6">
                                <!-- Personal Details Card -->
                                <div class="bg-gray-50 rounded-lg p-5 shadow-sm border border-gray-100">
                                    <h2
                                        class="text-lg font-semibold mb-4 pb-2 border-b border-gray-200 flex items-center">
                                        <i class="fas fa-user-circle mr-2 text-blue-600"></i>Personal Details
                                    </h2>
                                    <div class="space-y-3">
                                        <p><strong class="w-24 inline-block">Name:</strong>
                                            <%= user?.name %>
                                        </p>
                                        <p><strong class="w-24 inline-block">Gender:</strong>
                                            <%= user?.gender ? user?.gender.charAt(0).toUpperCase() +
                                                user?.gender.slice(1) : 'N/A' %>
                                        </p>
                                        <p><strong class="w-24 inline-block">Phone:</strong>
                                            <%= user?.phone || 'N/A' %>
                                        </p>
                                    </div>
                                </div>

                                <!-- Address Card -->
                                <div class="bg-gray-50 rounded-lg p-5 shadow-sm border border-gray-100">
                                    <h2
                                        class="text-lg font-semibold mb-4 pb-2 border-b border-gray-200 flex items-center">
                                        <i class="fas fa-map-marker-alt mr-2 text-blue-600"></i>Address
                                    </h2>
                                    <div class="space-y-3">
                                        <p><strong class="w-24 inline-block">State:</strong>
                                            <%= user?.address?.state || 'N/A' %>
                                        </p>
                                        <p><strong class="w-24 inline-block">City:</strong>
                                            <%= user?.address?.city || 'N/A' %>
                                        </p>
                                        <p><strong class="w-24 inline-block">Pin Code:</strong>
                                            <%= user?.address?.pinCode || 'N/A' %>
                                        </p>
                                    </div>
                                </div>
                            </div>

                            <!-- Middle Column - Business Info -->
                            <div class="lg:col-span-1 space-y-6">
                                <!-- Business Details Card -->
                                <div class="bg-gray-50 rounded-lg p-5 shadow-sm border border-gray-100">
                                    <h2
                                        class="text-lg font-semibold mb-4 pb-2 border-b border-gray-200 flex items-center">
                                        <i class="fas fa-briefcase mr-2 text-blue-600"></i>Business Details
                                    </h2>
                                    <div class="space-y-3">
                                        <p><strong class="w-32 inline-block">GSTIN:</strong>
                                            <%= user?.hiddenGstin %>
                                        </p>
                                        <p><strong class="w-32 inline-block">Aadhaar:</strong>
                                            <%= user?.hiddenAadharNumber || 'N/A' %>
                                        </p>
                                    </div>
                                </div>

                                <!-- Bank Details Card -->
                                <div class="bg-gray-50 rounded-lg p-5 shadow-sm border border-gray-100">
                                    <h2
                                        class="text-lg font-semibold mb-4 pb-2 border-b border-gray-200 flex items-center">
                                        <i class="fas fa-university mr-2 text-blue-600"></i>Bank Details
                                    </h2>
                                    <div class="space-y-3">
                                        <p><strong class="w-32 inline-block">Bank Name:</strong>
                                            <%= user?.bankDetails?.bankName || 'N/A' %>
                                        </p>
                                        <p><strong class="w-32 inline-block">Account No:</strong>
                                            <%= user?.bankDetails?.accountNumber ? 'xxxx-xxxx-xxxx-' +
                                                user?.bankDetails?.accountNumber.slice(-4) : 'N/A' %>
                                        </p>
                                        <p><strong class="w-32 inline-block">IFSC Code:</strong>
                                            <%= user?.bankDetails?.ifscCode || 'N/A' %>
                                        </p>
                                    </div>
                                </div>
                            </div>

                            <!-- Right Column - Products -->
                            <div class="lg:col-span-1">
                                <div class="bg-gray-50 rounded-lg p-5 shadow-sm border border-gray-100 h-full">
                                    <div class="flex justify-between items-center mb-4 pb-2 border-b border-gray-200">
                                        <h2 class="text-lg font-semibold flex items-center">
                                            <i class="fas fa-boxes mr-2 text-blue-600"></i>All Products
                                        </h2>
                                        <a href="/owners/createProduct"
                                            class="text-sm bg-blue-600 hover:bg-blue-700 text-white px-3 py-1 rounded">
                                            <i class="fas fa-plus mr-1"></i>Add Product
                                        </a>
                                    </div>
                                    <% if (user?.products && user.products?.length> 0) { %>
                                        <div class="space-y-3 max-h-98 overflow-y-auto pr-2">
                                            <% user?.products.forEach(product=> { %>
                                                <div class="relative p-4 rounded-lg shadow-sm border border-gray-300 hover:border-blue-300 hover:bg-gray-100 transition product-card flex items-center space-x-4"
                                                    data-category="<%= product.category %>">
                                                    <% if (product.productImage) { %>
                                                        <img src="data:<%= product.productImageType %>;base64,<%= product.productImage.toString('base64') %>"
                                                            alt="<%= product.productName %>"
                                                            class="w-16 h-16 rounded object-cover"
                                                            style="background-color: <%= product.bgColor %>">
                                                        <% } %>
                                                            <div class="flex-1">
                                                                <span
                                                                    class="absolute top-1 bg-orange-500 text-white rounded-sm px-1 text-xs">
                                                                    <%= product.category %>
                                                                </span>
                                                                <h2 class="text-violet-600 font-semibold text-lg mt-1">
                                                                    <%= product.productName %>
                                                                </h2>
                                                                <p class="text-xs text-gray-500 font-semibold">
                                                                    Model: <%= product.model || 'N/A' %>
                                                                </p>
                                                                <!-- Product Created Data & updated Data -->
                                                                <div
                                                                    class="text-xs text-gray-400 flex flex-col mb-1 font-semibold">
                                                                    <span>
                                                                        Created: <%= new
                                                                            Date(product.createdAt).toLocaleString('en-IN',
                                                                            { day: '2-digit' , month: '2-digit' ,
                                                                            year: '2-digit' , hour: '2-digit' ,
                                                                            minute: '2-digit' }) %>
                                                                    </span>
                                                                    <span>
                                                                        Updated: <%= new
                                                                            Date(product.updatedAt).toLocaleString('en-IN',
                                                                            { day: '2-digit' , month: '2-digit' ,
                                                                            year: '2-digit' , hour: '2-digit' ,
                                                                            minute: '2-digit' }) %>
                                                                    </span>
                                                                </div>
                                                                <!-- price -->
                                                                <div class="flex items-center mb-3">
                                                                    <span class="text-sm font-semibold text-gray-700">
                                                                        ₹<%= (product.discount) ?
                                                                            Math.round(product.price * (1 -
                                                                            product.discount /
                                                                            100)).toLocaleString('en-IN') :
                                                                            Math.round(product.price).toLocaleString('en-IN')
                                                                            %>
                                                                    </span>
                                                                    <% if (product.discount) { %>
                                                                        <span
                                                                            class="ml-2 text-sm text-gray-400 line-through">
                                                                            ₹<%= Math.round(product.price).toLocaleString('en-IN')
                                                                                %>
                                                                        </span>
                                                                        <span
                                                                            class="ml-2 px-2 py-0.5 bg-green-200 text-green-800 rounded-full text-xs font-semibold">
                                                                            <%= product.discount %>% OFF
                                                                        </span>
                                                                        <% } %>
                                                                </div>

                                                            </div>
                                                            <!-- Stock Badge -->
                                                            <% if (product.stock && product.stock > 0) { %>
                                                                <div
                                                                    class="absolute top-1 -right-2 bg-orange-100 text-orange-800 px-2 rounded-full text-xs">
                                                                    Only <%= product.stock %> left
                                                                </div>
                                                                <% }else{ %>
                                                                    <div
                                                                        class="absolute top-1 -right-2 bg-orange-200 text-orange-700 px-2 rounded-full text-xs font-bold">
                                                                        Sold Out
                                                                    </div>
                                                                    <% } %>
                                                                        <!-- Link for Update Product -->
                                                                        <div class="flex items-center space-x-3">
                                                                            <a href="/owners/updateProduct/<%= product._id %>"
                                                                                class="text-blue-500 hover:text-blue-700"
                                                                                aria-label="View details for <%= product.productName %>">
                                                                                <i class="fas fa-edit"></i>
                                                                            </a>
                                                                            <button type="button"
                                                                                class="text-red-500 hover:text-red-700 delete-product-btn"
                                                                                data-product-id="<%= product._id %>"
                                                                                data-product-name="<%= product.productName %>"
                                                                                aria-label="Delete <%= product.productName %>">
                                                                                <i
                                                                                    class="fas fa-trash cursor-pointer"></i>
                                                                            </button>
                                                                        </div>

                                                </div>
                                                <% }) %>
                                        </div>
                                        <% } else { %>
                                            <div class="text-center py-8">
                                                <i class="fas fa-box-open text-3xl text-violet-400 mb-2"></i>
                                                <p class="text-gray-500">No products listed yet</p>
                                                <a href="/owners/createProduct"
                                                    class="mt-3 inline-block text-blue-600 hover:text-blue-800 text-sm font-medium">Add
                                                    your first product</a>
                                            </div>
                                            <% } %>
                                </div>
                            </div>

                        </div>

                        <!-- Action Buttons -->
                        <div class="px-6 py-4 bg-gray-50 border-t border-gray-100 flex flex-wrap justify-center gap-4">
                            <button id="updateProfileBtn"
                                class="px-5 py-2 bg-blue-600 hover:bg-blue-700 text-white rounded-lg flex items-center cursor-pointer">
                                <i class="fas fa-user-edit mr-2"></i> Edit Profile
                            </button>
                            <button id="changePasswordBtn"
                                class="px-5 py-2 bg-orange-600 hover:bg-orange-700 text-white rounded-lg flex items-center cursor-pointer">
                                <i class="fas fa-lock mr-2"></i>Change Password
                            </button>
                            <a href="/sales"
                                class="px-5 py-2 bg-purple-600 hover:bg-purple-700 text-white rounded-lg flex items-center">
                                <i class="fas fa-chart-line mr-2"></i>View Sales
                            </a>
                        </div>
                    </div>
                </div>

                <!-- Edit Profile Modal -->
                <div id="ProfileUpdateModal" class="fixed inset-0 z-50 hidden">
                    <div class="modal-overlay absolute inset-0"></div>
                    <div class="flex items-center justify-center min-h-screen">
                        <div class="modal-content bg-white rounded-xl shadow-2xl w-full max-w-3xl p-6 relative">
                            <button id="editProfileCloseBtn"
                                class="absolute top-4 right-4 text-gray-400 hover:text-gray-600">
                                <i class="fas fa-times text-2xl"></i>
                            </button>
                            <h3 class="text-2xl font-bold mb-2 text-blue-600">
                                <i class="fas fa-user-edit mr-2"></i>Edit Profile
                            </h3>
                            <form id="ProfileUpdateForm" enctype="multipart/form-data" class="space-y-6">
                                <!-- Personal Information Section -->
                                <div class="space-y-4">
                                    <h4 class="text-lg font-semibold text-slate-600 border-b pb-2">Personal Information
                                    </h4>

                                    <!-- src="data:<%= user.picture?.productImageType %>;base64,<%= user.picture?.toString('base64')|| '/images/author.webp' %>" -->
                                    <!-- Profile Picture Upload -->
                                    <div class="flex items-center space-x-4">
                                        <div class="relative">
                                            <img id="profilePreview"
                                                src="<%= user.picture ? `data:${user.picture.productImageType};base64,${user.picture.toString('base64')}` : '/images/default-user.png' %>"
                                                class="w-20 h-20 rounded-full object-cover object-top border-2 border-gray-200 bg-yellow-300">
                                            <div class="file-upload mt-2">
                                                <label for="picture"
                                                    class="cursor-pointer text-sm bg-blue-100 text-blue-600 px-3 py-1 rounded-full">
                                                    <i class="fas fa-camera mr-2"></i>Change
                                                    <input type="file" id="picture" name="picture" accept="image/*"
                                                        onchange="previewImage(event)">
                                                </label>
                                            </div>
                                        </div>
                                    </div>

                                    <!-- Name and Gender -->
                                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                                        <div>
                                            <label class="block text-sm font-medium text-gray-700 mb-1">Full Name
                                                *</label>
                                            <input type="text" id="name" name="name" value="<%= user?.name %>" required
                                                class="w-full outline-0 px-4 py-2 rounded-lg border border-gray-300 focus:ring-2 focus:ring-blue-500">
                                        </div>
                                        <div>
                                            <label class="block text-sm font-medium text-gray-700 mb-1">Gender *</label>
                                            <select id="gender" name="gender"
                                                class="w-full outline-0 px-4 py-2 rounded-lg border border-gray-300 focus:ring-2 focus:ring-blue-500">
                                                <option value="male" <%=user?.gender==='male' ? 'selected' : '' %>>Male
                                                </option>
                                                <option value="female" <%=user?.gender==='female' ? 'selected' : '' %>
                                                    >Female</option>
                                                <option value="other" <%=user?.gender==='other' ? 'selected' : '' %>
                                                    >Other</option>
                                            </select>
                                        </div>
                                    </div>

                                    <!-- Contact Info -->
                                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                                        <div>
                                            <label class="block text-sm font-medium text-gray-700 mb-1">Email *</label>
                                            <input type="email" id="email" name="email" value="<%= user?.email %>"
                                                required
                                                class="w-full outline-0 px-4 py-2 rounded-lg border border-gray-300 focus:ring-2 focus:ring-blue-500">
                                        </div>
                                        <div>
                                            <label class="block text-sm font-medium text-gray-700 mb-1">Phone *</label>
                                            <input type="tel" id="phone" name="phone" value="<%= user?.phone %>"
                                                required
                                                class="w-full outline-0 px-4 py-2 rounded-lg border border-gray-300  focus:ring-2 focus:ring-blue-500">
                                        </div>
                                    </div>
                                </div>

                                <!-- Address Section -->
                                <div class="space-y-4">
                                    <h4 class="text-lg font-semibold text-slate-600 border-b pb-2">Address Information
                                    </h4>
                                    <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                                        <div>
                                            <label class="block text-sm font-medium text-gray-700 mb-1">State *</label>
                                            <select id="state" name="state" required
                                                class="w-full outline-0 px-4 py-2 rounded-lg border border-gray-300 focus:ring-2 focus:ring-blue-500">
                                                <option value="" disabled <%=!user.address?.state ? 'selected' : '' %>
                                                    >Select State</option>
                                                <option value="Andhra Pradesh" <%=user.address?.state==='Andhra Pradesh'
                                                    ? 'selected' : '' %>
                                                    >Andhra Pradesh</option>
                                                <option value="Arunachal Pradesh"
                                                    <%=user.address?.state==='Arunachal Pradesh' ? 'selected' : '' %>
                                                    >Arunachal Pradesh</option>
                                                <option value="Assam" <%=user.address?.state==='Assam' ? 'selected' : ''
                                                    %>>Assam</option>
                                                <option value="Bihar" <%=user.address?.state==='Bihar' ? 'selected' : ''
                                                    %>>Bihar</option>
                                                <option value="Chhattisgarh" <%=user.address?.state==='Chhattisgarh'
                                                    ? 'selected' : '' %>>Chhattisgarh</option>
                                                <option value="Goa" <%=user.address?.state==='Goa' ? 'selected' : '' %>
                                                    >Goa</option>
                                                <option value="Gujarat" <%=user.address?.state==='Gujarat' ? 'selected'
                                                    : '' %>>Gujarat</option>
                                                <option value="Haryana" <%=user.address?.state==='Haryana' ? 'selected'
                                                    : '' %>>Haryana</option>
                                                <option value="Himachal Pradesh"
                                                    <%=user.address?.state==='Himachal Pradesh' ? 'selected' : '' %>
                                                    >Himachal Pradesh</option>
                                                <option value="Jharkhand" <%=user.address?.state==='Jharkhand'
                                                    ? 'selected' : '' %>>Jharkhand</option>
                                                <option value="Karnataka" <%=user.address?.state==='Karnataka'
                                                    ? 'selected' : '' %>>Karnataka</option>
                                                <option value="Kerala" <%=user.address?.state==='Kerala' ? 'selected'
                                                    : '' %>>Kerala</option>
                                                <option value="Madhya Pradesh" <%=user.address?.state==='Madhya Pradesh'
                                                    ? 'selected' : '' %>
                                                    >Madhya Pradesh</option>
                                                <option value="Maharashtra" <%=user.address?.state==='Maharashtra'
                                                    ? 'selected' : '' %>>Maharashtra</option>
                                                <option value="Manipur" <%=user.address?.state==='Manipur' ? 'selected'
                                                    : '' %>>Manipur</option>
                                                <option value="Meghalaya" <%=user.address?.state==='Meghalaya'
                                                    ? 'selected' : '' %>>Meghalaya</option>
                                                <option value="Mizoram" <%=user.address?.state==='Mizoram' ? 'selected'
                                                    : '' %>>Mizoram</option>
                                                <option value="Nagaland" <%=user.address?.state==='Nagaland'
                                                    ? 'selected' : '' %>>Nagaland</option>
                                                <option value="Odisha" <%=user.address?.state==='Odisha' ? 'selected'
                                                    : '' %>>Odisha</option>
                                                <option value="Punjab" <%=user.address?.state==='Punjab' ? 'selected'
                                                    : '' %>>Punjab</option>
                                                <option value="Rajasthan" <%=user.address?.state==='Rajasthan'
                                                    ? 'selected' : '' %>>Rajasthan</option>
                                                <option value="Sikkim" <%=user.address?.state==='Sikkim' ? 'selected'
                                                    : '' %>>Sikkim</option>
                                                <option value="Tamil Nadu" <%=user.address?.state==='Tamil Nadu'
                                                    ? 'selected' : '' %>>Tamil Nadu</option>
                                                <option value="Telangana" <%=user.address?.state==='Telangana'
                                                    ? 'selected' : '' %>>Telangana</option>
                                                <option value="Tripura" <%=user.address?.state==='Tripura' ? 'selected'
                                                    : '' %>>Tripura</option>
                                                <option value="Uttar Pradesh" <%=user.address?.state==='Uttar Pradesh'
                                                    ? 'selected' : '' %>>Uttar Pradesh</option>
                                                <option value="Uttarakhand" <%=user.address?.state==='Uttarakhand'
                                                    ? 'selected' : '' %>>Uttarakhand</option>
                                                <option value="West Bengal" <%=user.address?.state==='West Bengal'
                                                    ? 'selected' : '' %>>West Bengal</option>
                                            </select>
                                        </div>
                                        <div>
                                            <label class="block text-sm font-medium text-gray-700 mb-1">City *</label>
                                            <input type="text" id="city" name="city" value="<%= user.address?.city %>"
                                                required
                                                class="w-full outline-0 px-4 py-2 rounded-lg border border-gray-300 focus:ring-2 focus:ring-blue-500">
                                        </div>
                                        <div>
                                            <label class="block text-sm font-medium text-gray-700 mb-1">Pin Code
                                                *</label>
                                            <input type="text" id="pinCode" name="pinCode"
                                                value="<%= user.address?.pinCode %>" required
                                                class="w-full outline-0 px-4 py-2 rounded-lg border border-gray-300  focus:ring-2 focus:ring-blue-500">
                                        </div>
                                    </div>
                                </div>

                                <!-- Business Details Section -->
                                <div class="space-y-4">
                                    <h4 class="text-lg font-semibold text-slate-600 border-b pb-2">Business Details</h4>
                                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                                        <div class="relative">
                                            <label class="block text-sm font-medium text-gray-700 mb-1">GSTIN *</label>
                                            <input type="password" id="gstin" name="gstin" value="<%= user?.gstin %>"
                                                required
                                                class="w-full outline-0 px-4 py-2 rounded-lg border border-gray-300 focus:ring-2 focus:ring-blue-500" />
                                            <button type="button"
                                                class="absolute right-3 top-8 text-gray-500 toggle-password"
                                                data-target="gstin">
                                                <i class="fas fa-eye"></i>
                                            </button>
                                        </div>
                                        <div class="relative">
                                            <label class="block text-sm font-medium text-gray-700 mb-1">Aadhar Number
                                                *</label>
                                            <input type="password" id="aadharNumber" name="aadharNumber"
                                                value="<%= user?.aadharNumber %>" required
                                                class="w-full outline-0 px-4 py-2 rounded-lg border border-gray-300  focus:ring-2 focus:ring-blue-500" />
                                            <button type="button"
                                                class="absolute right-3 top-8 text-gray-500 toggle-password"
                                                data-target="aadharNumber">
                                                <i class="fas fa-eye"></i>
                                            </button>
                                        </div>
                                    </div>
                                </div>

                                <!-- Bank Details Section -->
                                <div class="space-y-4">
                                    <h4 class="text-lg font-semibold text-gray-700 border-b pb-2">Bank Details</h4>
                                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                                        <div>
                                            <label class="block text-sm font-medium text-gray-700 mb-1">Bank Name
                                                *</label>
                                            <select id="bankName" name="bankName" required
                                                class="w-full outline-0 px-4 py-2 rounded-lg border border-gray-300 focus:ring-2 focus:ring-blue-500">
                                                <option value="" disabled <%=!user.bankDetails?.bankName ? 'selected'
                                                    : '' %>>Select Bank</option>

                                                <option value="Allahabad Bank"
                                                    <%=user.bankDetails?.bankName==='Allahabad Bank' ? 'selected' : ''
                                                    %>
