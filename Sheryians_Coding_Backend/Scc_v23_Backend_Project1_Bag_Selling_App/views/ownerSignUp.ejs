<!DOCTYPE html>
<html lang="en">

    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Owner Signup</title>
        <link rel="stylesheet" href="/stylesheets/output.css">
        <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
        <style>
            /* Flash message Css */
            @keyframes yoyo-bounce {
                0% {
                    transform: scale(0);
                }

                50% {
                    transform: scale(1.1);
                    /* Slight overshoot for bounce */
                }

                75% {
                    transform: scale(0.95);
                    /* Pull back slightly */
                }

                100% {
                    transform: scale(1);
                    /* Settle in place */
                }
            }

            .yoyo-bounce {
                animation: yoyo-bounce 0.5s ease-in-out forwards;
            }
        </style>
    </head>

    <body class="bg-gradient-to-br from-indigo-100 via-purple-100 to-pink-100">
        <!-- Header -->
        <%- include('partials/header') %>

            <!-- Flash message -->
            <%- include('partials/flashMessage') %>

                    <!-- Main Signup Section -->
                    <div class="flex-grow flex items-center justify-center p-4">
                        <div
                            class="flex flex-col md:flex-row w-full max-w-4xl bg-white rounded-2xl shadow-lg overflow-hidden">
                            <!-- Left Section: Image and Portfolio Info -->
                            <div
                                class="relative w-full md:w-1/2 h-64 md:h-auto bg-contain bg-center bg-no-repeat bg-gray-950 bg-[url('/images/fulllogo.png')] rounded-r-2xl hidden sm:block">
                                <div
                                    class="absolute inset-0 bg-black/50 flex flex-col justify-between p-6 rounded-r-2xl">
                                    <div class="flex justify-between items-center">
                                        <h2 class="text-white/95 text-2xl sm:text-3xl font-bold">Hello</h2>
                                        <a href="/owners/auth/login"
                                            class="text-white border border-white px-3 py-1 sm:px-4 sm:py-1 rounded-full hover:bg-white hover:text-black transition text-sm sm:text-base">Login</a>
                                    </div>
                                    <div class="flex items-center space-x-3">
                                        <img src="/images/author.webp" alt="User Avatar"
                                            class="w-10 h-10 rounded-full object-cover object-top border-2 border-yellow-300 bg-black">
                                        <div>
                                            <p class="text-white font-semibold text-sm sm:text-base">Full
                                                Stack-Developer</p>
                                            <p class="text-gray-300 text-xs">abhishekhkumar1516@gmail.com</p>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Right Section: Signup Form -->
                            <div class="w-full md:w-1/2 p-4 sm:p-6 flex flex-col justify-center">
                                <div class="flex justify-center items-center mb-4 sm:mb-6">
                                    <h1 class="text-3xl sm:text-4xl font-bold uppercase">Owner Account</h1>
                                </div>
                                <form action="/owners/auth/signup" method="POST" class="space-y-4">
                                    <div>
                                        <label for="name" class="block text-sm font-medium text-gray-700">Name <span
                                                class="text-red-500">*</span></label>
                                        <input type="text" id="name" name="name" required
                                            class="mt-1 block w-full px-4 py-3 border border-gray-200 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 text-sm placeholder-gray-400"
                                            placeholder="Enter your name" />
                                    </div>
                                    <div>
                                        <label for="gender" class="block text-sm font-medium text-gray-700">Gender <span
                                                class="text-red-500">*</span></label>
                                        <select id="gender" name="gender" required
                                            class="mt-1 block w-full px-4 py-3 border border-gray-200 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 text-sm text-gray-700">
                                            <option value="" disabled selected>Select gender</option>
                                            <option value="male">Male</option>
                                            <option value="female">Female</option>
                                            <option value="other">Other</option>
                                        </select>
                                    </div>
                                    <div>
                                        <label for="email" class="block text-sm font-medium text-gray-700">Email <span
                                                class="text-red-500">*</span></label>
                                        <input type="email" id="email" name="email" required
                                            class="mt-1 block w-full px-4 py-3 border border-gray-200 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 text-sm placeholder-gray-400"
                                            placeholder="Enter your email" />
                                    </div>
                                    <div>
                                        <label for="gstin" class="block text-sm font-medium text-gray-700">GSTIN <span
                                                class="text-red-500">*</span></label>
                                        <input type="text" id="gstin" name="gstin" required
                                            class="mt-1 block w-full px-4 py-3 border border-gray-200 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 text-sm placeholder-gray-400"
                                            placeholder="Enter your GSTIN" />
                                    </div>
                                    <div>
                                        <label for="aadharNumber" class="block text-sm font-medium text-gray-700">Aadhar
                                            Number
                                            <span class="text-red-500">*</span></label>
                                        <input type="text" id="aadharNumber" name="aadharNumber" required
                                            class="mt-1 block w-full px-4 py-3 border border-gray-200 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 text-sm placeholder-gray-400"
                                            placeholder="Enter your Aadhar Number" />
                                    </div>
                                    <div>
                                        <label for="password" class="block text-sm font-medium text-gray-700">Password
                                            <span class="text-red-500">*</span></label>
                                        <div class="relative">
                                            <input type="password" id="password" name="password" required
                                                class="mt-1 block w-full px-4 py-3 border border-gray-200 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 text-sm placeholder-gray-400"
                                                placeholder="Enter your password" />
                                            <button type="button" onclick="togglePassword()"
                                                class="absolute inset-y-0 right-0 flex items-center pr-3 text-gray-400 hover:text-gray-600">
                                                <i id="eyeIcon" class="fas fa-eye"></i>
                                            </button>
                                        </div>
                                    </div>
                                    <div class="text-end">
                                        <a href="/users/auth/signup" class="text-sm text-red-500 hover:underline">User
                                            Signup?</a>
                                    </div>
                                    <div class="flex items-center justify-center my-4">
                                        <hr class="w-1/3 border-gray-300"><span
                                            class="mx-2 text-gray-500 text-sm">or</span>
                                        <hr class="w-1/3 border-gray-300">
                                    </div>
                                    <button type="button"
                                        class="w-full flex items-center justify-center border rounded-lg p-3 hover:bg-gray-100 transition text-sm sm:text-base">
                                        <img src="https://www.google.com/favicon.ico" alt="Google Icon"
                                            class="w-5 h-5 mr-2">
                                        Sign Up with Google
                                    </button>
                                    <button type="submit"
                                        class="w-full bg-indigo-600 text-white rounded-full p-3 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition duration-200 text-sm sm:text-base">
                                        Sign Up
                                    </button>
                                    <p class="mt-4 text-center text-sm text-gray-600">
                                        Already have an account? <a href="/owners/auth/login"
                                            class="text-red-500 hover:underline font-medium">Log In</a>
                                    </p>
                                </form>
                                <div class="flex justify-center space-x-4 mt-4 sm:mt-6">
                                    <a href="#" class="text-gray-500 hover:text-gray-700"><i
                                            class="fab fa-facebook-f text-lg"></i></a>
                                    <a href="#" class="text-gray-500 hover:text-gray-700"><i
                                            class="fab fa-twitter text-lg"></i></a>
                                    <a href="#" class="text-gray-500 hover:text-gray-700"><i
                                            class="fab fa-linkedin-in text-lg"></i></a>
                                    <a href="#" class="text-gray-500 hover:text-gray-700"><i
                                            class="fab fa-instagram text-lg"></i></a>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- JavaScripts -->
                    <script src="/javascripts/searchAndMenuToggle.js"></script>
                    <script src="/javascripts/profileToggle.js"></script>
                    <script src="/javascripts/passwordShowToggle.js"></script>
                    <script src="/javascripts/flashMessage.js"></script>
    </body>

</html>